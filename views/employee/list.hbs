<h3><a class="btn btn-secondary" href="/employee">Create New employee list</a></h3>
<table class="table table-striped">
<thead>
    <tr>
        <th>Full Name</th>
        <th>Email</th>
        <th>Mobile</th>
        <th>City </th>
        <th></th>
        </tr>
        </thead>

        <tbody>
            {{#each list}}
            <tr>
                <td>{{this.fullName}}</td>
                <td>{{this.email}}</td>
                <td>{{this.mobile}}</td>
                <td>{{this.city}}</td>
                <td>
                   
                   <a href="/employee/{{this._id}}"><i class="fas fa-pencil-alt fa-lg"></i></a>
                    
                    <a href="/employee/delete"/{{this._id}}><i class="fas fa-trash fa-lg"></i></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
        </table>